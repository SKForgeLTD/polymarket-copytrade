{
  "name": "polymarket-copytrade",
  "version": "1.0.0",
  "description": "Production-grade Polymarket copy trading bot with real-time monitoring and intelligent position sizing",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --clean && cp -r src/web/static dist/ && cp -r src/web/views dist/",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "polymarket",
    "trading",
    "copy-trading",
    "cryptocurrency",
    "prediction-markets"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@polymarket/clob-client": "^5.2.3",
    "@polymarket/order-utils": "^3.0.1",
    "@polymarket/real-time-data-client": "^1.4.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "ethers": "^5.8.0",
    "fastify": "^5.7.4",
    "lit-html": "^3.3.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^20.19.33",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}
